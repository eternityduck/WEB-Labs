<li class="dropdown">
    <a asp-controller="Topic"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Drinks<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Topic" asp-action="Index"
                   asp-route-category="@category.Title">@category.Title</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Topic" asp-action="Index" asp-route-category="">View all drinks</a>
        </li>
    </ul>
</li>